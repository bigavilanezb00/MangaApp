<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjustesFragment">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notificaciones"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F4F4F4"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:text="Notificaciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/idioma"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Idioma"
        android:onClick="showPopup"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/flecha"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificaciones" />

    <TextView
        android:id="@+id/moneda"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Moneda"
        android:onClick="showPopupMoneda"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:background="#F4F4F4"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/flecha"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idioma" />

    <TextView
        android:id="@+id/divisa"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Divisa de pago"
        android:onClick="showPopupMoneda"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/flecha"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneda" />

    <TextView
        android:id="@+id/limpiarcache"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Limpiar cache"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:background="#F4F4F4"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/flecha"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divisa" />

    <TextView
        android:id="@+id/pruebadered"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Prueba de red"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/flecha"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limpiarcache" />

    <TextView
        android:id="@+id/vaplicaion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Versión de la aplicaión                                           v1.0.2"
        android:paddingStart="10dp"
        android:background="#F4F4F4"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pruebadered" />

</androidx.constraintlayout.widget.ConstraintLayout>